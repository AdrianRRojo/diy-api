<h1>World cup facts!</h1>

<% world_cups.forEach(function(world_cup, idx) { %>
  <div class="well">
    <h2>
      <%=world_cup.fact %>
      <br>
      <%= world_cup.year%>
      <br>
      <%= world_cup.country %> 
    </h2>
    <a href="edit/<%= idx %>"> Edit </a>
    <form method="POST" action="/<%= idx %>/?_method=DELETE">
      <input type="submit" value="Delete">
  </div>
<% }); %>